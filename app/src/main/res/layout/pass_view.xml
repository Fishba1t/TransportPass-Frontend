<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/washedpurple"
    android:padding="16dp">

    <!-- Legend Item 1 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@color/redd"
            android:layout_marginEnd="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BUSES"
            android:textColor="@color/redd"
            android:textStyle="bold"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- Legend Item 2 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <View
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@color/greenn2"
            android:layout_marginEnd="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TROLEYBUSES"
            android:textColor="@color/greenn2"
            android:textStyle="bold"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- Legend Item 2 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <View
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@color/bluee"
            android:layout_marginEnd="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TRAMS"
            android:textColor="@color/bluee"
            android:textStyle="bold"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <View
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@color/orangee"
            android:layout_marginEnd="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MICROBUSES"
            android:textColor="@color/orangee"
            android:textStyle="bold"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- Add more legend items as needed -->

</LinearLayout>
